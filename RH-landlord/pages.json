{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true,
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTextStyle": "white", //导航栏标题颜色
				"navigationBarBackgroundColor": "#2979ff", //导航栏背景颜色
				"navigationBarTitleText": "我的",
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}

		}
	],
	"subpackages": [{
			"root": "house_pages",
			"pages": [{
					"path": "house/add",
					"style": {
						"navigationBarTitleText": "新增",
						"navigationBarBackgroundColor": "#2979ff", //导航栏背景颜色
						"navigationBarTextStyle": "white", //导航栏标题颜色
						"enablePullDownRefresh": false
					}
				},
				{
					"path": "house/maintenanceList",
					"style": {
						"navigationBarTitleText": "房间报修列表",
						"navigationBarBackgroundColor": "#2979ff", //导航栏背景颜色
						"navigationBarTextStyle": "white", //导航栏标题颜色
						"enablePullDownRefresh": true
					}
				},
				{
					"path": "house/leaseApplication",
					"style": {
						"navigationBarTitleText": "租赁申请列表",
						"navigationBarBackgroundColor": "#2979ff", //导航栏背景颜色
						"navigationBarTextStyle": "white", //导航栏标题颜色
						"enablePullDownRefresh": true
					}
				}
			]
		},
		{
			"root": "tenants_pages",
			"pages": [{
				"path": "tenants/list",
				"style": {
					"navigationBarTitleText": "租客",
					"navigationBarBackgroundColor": "#2979ff", //导航栏背景颜色
					"navigationBarTextStyle": "white", //导航栏标题颜色
					"enablePullDownRefresh": true
				}
			}]
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		//底部按钮配置
		"color": "#8F8F94", //文字默认颜色
		"selectedColor": "#333333", //文字选中时的颜色
		"borderStyle": "black", //上边框的颜色 仅支持 black / white
		"backgroundColor": "#FFFFFF", //tab 的背景色
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/image/tabBar/home.png",
				"selectedIconPath": "static/image/tabBar/home-on.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/user/user",
				"iconPath": "static/image/tabBar/user.png",
				"selectedIconPath": "static/image/tabBar/user-on.png",
				"text": "我的"
			}
		]
	},
	"uniIdRouter": {}
}
